# Environment variables for ApolloOS Framework - EXAMPLE FILE
# Copy this file to .env and fill in your values

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/apolloos_dev

# JWT configuration for auth
JWT_SECRET=YOUR_SUPER_SECRET_KEY_CHANGE_ME_IN_PRODUCTION
JWT_EXPIRES_IN=1d

# Application settings
NODE_ENV=development
PORT=4000

# Optional toggles
# USE_MOCK_DB=true         # Uncomment to use mock database
# USE_ALTERNATIVE_PORT=true  # Uncomment to try alternative ports if main port is busy 